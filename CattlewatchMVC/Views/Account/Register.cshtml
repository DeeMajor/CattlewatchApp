@model CattlewatchMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<head>
    <title>Cattlewatch Africa (PTY) LTD</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Client/assets/css/main.css" />
    <link rel="stylesheet" href="~/Client/assets/css/bootstrap.min.css" />
</head>

<body>
    <header id="header">
        <div class="inner">
            <a href="@Url.Action("Index", "Home")" class="logo"> <img src="~/Client/images/CWA Logo.png" width="200" alt="Cattlewatch Africa"> </a>
            <nav id="nav">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="generic.html">Generic</a>
                <a href="elements.html">Elements</a>
                <a href="@Url.Action("Login", "Account")">Login</a>
            </nav>
            <a href="#navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
        </div>
    </header>
    <section id="banner">
        <div class="inner">
            <h2 style="text-transform:uppercase; color:#6cc091">@ViewBag.Title</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-5" style="margin:0 auto;">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5" style="margin:0 auto;">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5" style="margin:0 auto;">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm    Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="margin:0 auto;">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            }
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    </section>
   

</body>
    <!-- Scripts -->
    <script src="~/Client/assets/js/jquery.min.js"></script>
    <script src="~/Client/assets/js/skel.min.js"></script>
    <script src="~/Client/assets/js/util.js"></script>
    <script src="~/Client/assets/js/main.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
