@model CattlewatchMVC.Models.Livestock

@{
    Layout = "~/Views/Shared/_ALayout.cshtml";
    ViewBag.Title = "Details";
}


<div class="card shadow mb-4 form-horizontal">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Details Livestock</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.type)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.type)
                </dd>

            </dl>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <div class="col-md-offset-2 col-md-10 btn btn-sm btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.LivestockId }, new { style = "text-decoration:none;" })
                </div>
            </div>
            <div class="col-lg-2">
                <div class="btn btn-sm btn-success" style="text-decoration:none">
                    @Html.ActionLink("Back to List", "Index", new { style = "text-decoration:none;" })
                </div>
            </div>
        </div>
    </div>
    <br />
</div>